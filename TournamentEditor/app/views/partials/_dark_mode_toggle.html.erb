<button 
  class="dark-mode-toggle text-muted-foreground hover:text-foreground transition-colors p-2 rounded hover:bg-muted"
  aria-label="Toggle dark mode"
  title="Click me to toggle dark mode"
>
  <!-- Moon Icon (shown in light mode to switch to dark) -->
  <svg 
    class="dark-mode-moon-icon size-6 dark:hidden"
    xmlns="http://www.w3.org/2000/svg" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke-width="1.5" 
    stroke="currentColor" 
    aria-hidden="true"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
  </svg>
  
  <!-- Sun Icon (shown in dark mode to switch to light) -->
  <svg 
    class="dark-mode-sun-icon size-6 hidden dark:block"
    xmlns="http://www.w3.org/2000/svg" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke-width="1.5" 
    stroke="currentColor" 
    aria-hidden="true"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
  </svg>
</button>

<script>
  // Only initialize once, even if partial is included multiple times
  if (!window.darkModeToggleInitialized) {
    window.darkModeToggleInitialized = true;
    
    // Update icon visibility and tooltips based on current mode
    function updateDarkModeIcons() {
      const isDark = document.documentElement.classList.contains('dark');
      const moonIcons = document.querySelectorAll('.dark-mode-moon-icon');
      const sunIcons = document.querySelectorAll('.dark-mode-sun-icon');
      const buttons = document.querySelectorAll('.dark-mode-toggle');
      
      // Toggle icon visibility explicitly (works even if Tailwind classes don't)
      moonIcons.forEach(icon => {
        if (isDark) {
          icon.style.display = 'none';
        } else {
          icon.style.display = 'block';
        }
      });
      
      sunIcons.forEach(icon => {
        if (isDark) {
          icon.style.display = 'block';
        } else {
          icon.style.display = 'none';
        }
      });
      
      // Update tooltips
      buttons.forEach(button => {
        if (isDark) {
          button.setAttribute('title', 'Click me to toggle light mode');
          button.setAttribute('aria-label', 'Toggle light mode');
        } else {
          button.setAttribute('title', 'Click me to toggle dark mode');
          button.setAttribute('aria-label', 'Toggle dark mode');
        }
      });
    }

    // Handle dark mode toggle using event delegation
    function initDarkModeToggle() {
      // Use event delegation on document to handle all current and future buttons
      document.addEventListener('click', function(e) {
        if (e.target.closest('.dark-mode-toggle')) {
          document.documentElement.classList.toggle('dark');
          updateDarkModeIcons();
        }
      });
      
      // Initialize icons and tooltips on page load
      updateDarkModeIcons();
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initDarkModeToggle);
    } else {
      initDarkModeToggle();
    }
  }
</script>
